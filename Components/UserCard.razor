@using MyMauiApp.Models
@inject NavigationManager NavigationManager

@* /*
* User Card Component
*
* Demonstrates:
* - Reusable component with Parameter
* - NavigationManager for navigation with route parameters
* - Component event handling
* - Conditional rendering
*/ *@

<div class="user-card">
    <div class="user-image">
        @if (!string.IsNullOrEmpty(User.ImageUrl))
        {
            <img src="@User.ImageUrl" alt="@User.Name" />
        }
        else
        {
            <div class="placeholder-image">
                PI
            </div>
        }
    </div>

    <div class="user-info">
        <h3>@User.Name</h3>
        <p class="user-id">ID: #@User.Id</p>
        <p class="user-email">@User.Email</p>
        <p class="user-detail">Age: @User.Age years</p>
        <p class="user-detail">Phone: @User.PhoneNumber</p>

        @if (!string.IsNullOrEmpty(User.Address))
        {
            <p class="user-detail">@User.Address</p>
        }

        <p class="user-date">Added: @User.CreatedDate. ToString("MMM dd, yyyy")</p>
    </div>

    <div class="user-actions">
        <button class="btn btn-primary" @onclick="ViewDetails">View Details</button>
    </div>
</div>

@code {
    [Parameter]
    public User User { get; set; } = new User();

    private void ViewDetails()
    {
        NavigationManager.NavigateTo($"/userdetails/{User.Id}");
    }
}

<style>
