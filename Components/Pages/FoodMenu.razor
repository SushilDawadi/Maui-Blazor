@page "/foodmenu"


<div class="container mt-4">
    <h2 class="text-center mb-4 menu-title">ğŸ´ Food Menu with Sorting ğŸ´</h2>

    <!-- Sorting Buttons -->
    <div class="text-center mb-4">
        <button class="btn btn-primary btn-lg me-3" @onclick="SortByPrice">
            ğŸ“Š Sort by Price
        </button>
        <button class="btn btn-success btn-lg" @onclick="SortByName">
            ğŸ”¤ Sort by Name
        </button>
    </div>

    <div class="menu-container">
        @foreach (var item in foodItems)
        {
            <ItemCard Name="@item.Name" Ingredients="@item.Ingredients" Price="@item.Price" />
        }
    </div>
</div>

