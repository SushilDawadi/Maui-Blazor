@page "/adduser"

@using MauiBlazorApp.Models
@using MyMauiApp.Data
@inject NavigationManager NavigationManager

@* /*
* Add User Page
*
* Demonstrates:
* - Multiple Routes (adduser route)
* - EditForm component with model binding
* - Input Components (InputText, InputNumber, InputTextArea)
* - DataAnnotationsValidator for validation
* - ValidationSummary and ValidationMessage
* - OnValidSubmit event handler
* - OnInvalidSubmit event handler
* - NavigationManager for programmatic navigation
*/ *@

<div class="add-user-container">
    <h2>Add New User</h2>

    <EditForm Model="@newUser" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary class="validation-summary" />

        <div class="form-card">

            <div class="form-group">
                <label for="name">Name: <span class="required">*</span></label>
                <InputText id="name" class="form-control" @bind-Value="newUser.Name" placeholder="Enter full name" />
                <ValidationMessage For="@(() => newUser.Name)" />
            </div>

            <div class="form-group">
                <label for="email">Email: <span class="required">*</span></label>
                <InputText id="email" type="email" class="form-control" @bind-Value="newUser.Email"
                    placeholder="user@example.com" />
                <ValidationMessage For="@(() => newUser.Email)" />
            </div>

            <div class="form-group">
                <label for="age">Age: <span class="required">*</span></label>
                <InputNumber id="age" class="form-control" @bind-Value="newUser.Age" placeholder="18-120" />
                <ValidationMessage For="@(() => newUser.Age)" />
            </div>

            <div class="form-group">
                <label for="phone">Phone Number: <span class="required">*</span></label>
                <InputText id="phone" type="tel" class="form-control" @bind-Value="newUser.PhoneNumber"
                    placeholder="10 digits" />
                <ValidationMessage For="@(() => newUser.PhoneNumber)" />
            </div>

            <div class="form-group">
                <label for="image">Profile Image URL (Optional):</label>
                <InputText id="image" type="url" class="form-control" @bind-Value="newUser.ImageUrl"
                    placeholder="https://example.com/image.jpg" />
                <ValidationMessage For="@(() => newUser.ImageUrl)" />
            </div>

            <div class="form-group">
                <label for="address">Address (Optional):</label>
                <InputTextArea id="address" class="form-control" @bind-Value="newUser.Address" rows="3"
                    placeholder="Enter full address" />
                <ValidationMessage For="@(() => newUser.Address)" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Add User</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </div>

            @if (!string.IsNullOrEmpty(statusMessage))
            {
                <div class="alert @(isSuccess ? "alert-success" : "alert-danger")">
                    @statusMessage
                </div>
            }
        </div>
    </EditForm>
</div>

@code {
    private User newUser = new User();
    private string statusMessage = string.Empty;
    private bool isSuccess = false;

    private void HandleValidSubmit()
    {
        try
        {
            newUser.Id = UserData.NextUserId++;
            newUser.CreatedDate = DateTime.Now;
            UserData.UsersList.Add(newUser);

            statusMessage = $"User '{newUser.Name}' added successfully!";
            isSuccess = true;

            Task.Delay(1500).ContinueWith(_ =>
            {
                NavigationManager.NavigateTo("/users");
            });
        }
        catch (Exception ex)
        {
            statusMessage = $"Error: {ex.Message}";
            isSuccess = false;
        }
    }

    private void HandleInvalidSubmit()
    {
        statusMessage = "Please fix the validation errors above.";
        isSuccess = false;
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/users");
    }
}

