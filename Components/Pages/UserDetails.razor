@page "/userdetails/{Id:int}"


@using MyMauiApp.Data
@using MyMauiApp.Models
@inject NavigationManager NavigationManager

@* /*
* User Details Page
*
* Demonstrates:
* - Route Parameters: {Id} captures value from URL
* - Route Constraints: : int ensures Id must be an integer
* - Parameter attribute to receive route values
* - NavigationManager for going back
* - Conditional rendering based on data availability
*/ *@

<div class="details-container">
    @if (user == null)
    {
        <div class="error-card">
            <h2>User Not Found</h2>
            <p>The user with ID <strong>@Id</strong> does not exist.</p>
            <button class="btn btn-primary" @onclick="GoBack">Back to Users</button>
        </div>
    }
    else
    {
        <div class="details-card">
            <div class="details-header">
                <button class="btn btn-back" @onclick="GoBack">Back</button>
                <h2>User Details</h2>
            </div>

            <div class="profile-section">
                <div class="profile-image">
                    @if (!string.IsNullOrEmpty(user.ImageUrl))
                    {
                        <img src="@user.ImageUrl" alt="@user.Name" />
                    }
                    else
                    {
                        <div class="placeholder-image">
                            PI
                        </div>
                    }
                </div>

                <div class="profile-info">
                    <h1>@user.Name</h1>
                    <p class="user-id">User ID: #@user.Id</p>
                </div>
            </div>

            <div class="details-grid">
                <div class="detail-item">
                    <span class="detail-label">Email Address</span>
                    <span class="detail-value">@user.Email</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Age</span>
                    <span class="detail-value">@user.Age years</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Phone Number</span>
                    <span class="detail-value">@user.PhoneNumber</span>
                </div>

                @if (!string.IsNullOrEmpty(user.Address))
                {
                    <div class="detail-item full-width">
                        <span class="detail-label">Address</span>
                        <span class="detail-value">@user.Address</span>
                    </div>
                }

                <div class="detail-item">
                    <span class="detail-label">Created Date</span>
                    <span class="detail-value">@user.CreatedDate.ToString("MMMM dd, yyyy")</span>
                </div>

                <div class="detail-item">
                    <span class="detail-label">Created Time</span>
                    <span class="detail-value">@user.CreatedDate.ToString("hh:mm: ss tt")</span>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private User? user;

    protected override void OnInitialized()
    {
        user = UserData.UsersList.FirstOrDefault(u => u.Id == Id);
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/users");
    }


}

